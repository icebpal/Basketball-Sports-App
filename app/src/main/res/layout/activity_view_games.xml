<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewGamesActivity">

    <TextView
        android:id="@+id/league"
        android:layout_width="285dp"
        android:layout_height="53dp"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/leagueName"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/choosegame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scheduled Games"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/league" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:verticalScrollbarPosition="right"
        app:layout_constraintTop_toBottomOf="@+id/choosegame"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/add_new_game">

            <Button
                android:id="@+id/game1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/game1"
                app:layout_constraintVertical_bias="0.025"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/game2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/game1"
                app:layout_constraintVertical_bias="0.025"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/game3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/game1"
                app:layout_constraintVertical_bias="0.025"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/game4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/game1"
                app:layout_constraintVertical_bias="0.025"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/game5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/game1"
                app:layout_constraintVertical_bias="0.025"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/game6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/game1"
                app:layout_constraintVertical_bias="0.025"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/game7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/game1"
                app:layout_constraintVertical_bias="0.025"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:id="@+id/game8"
                android:layout_width="match_parent"
