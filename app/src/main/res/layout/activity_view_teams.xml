<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTeamsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Team Stats"
                android:textColor="#050E38"
                android:textSize="30sp"
                android:textStyle="normal"
                android:visibility="visible" />
        </LinearLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/view_teams_table">
                <TableRow>

                    <TextView
                        android:padding="3dip"
                        android:text="Player Numbers"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="3dip"
                        android:text="@string/fg"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="3dip"
                        android:text="@string/ThreePT"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="3dip"
                        android:text="@string/ft"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="3dip"
                        android:text="@string/rebounds"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="3dip"
                        android:text="@string/steal"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="3dip"
                        android:text="@string/block"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="3dip"
                        android:text="@string/fouls"
                        android:textSize="16sp" />

                    <TextView
                        android:padding="3dip"
                        android:text="@string/points"
                        android:textSize="16sp" />
                </TableRow>
        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>