<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChosePlayerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/team1"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="5"
            android:columnCount="2">
            <Button
                android:id="@+id/chose_player_button1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/player1"
                android:background="@drawable/round_button_1"/>
            <Button
                android:id="@+id/chose_player_button2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/player1"
                android:background="@drawable/round_button_2"/>
            <Button
                android:id="@+id/chose_player_button3"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/player2"
                android:background="@drawable/round_button_1"/>
            <Button
                android:id="@+id/chose_player_button4"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="1"
                android:layout_column="1"
                android:text="@string/player2"
                android:background="@drawable/round_button_2"/>
            <Button
                android:id="@+id/chose_player_button5"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="@string/player3"
                android:background="@drawable/round_button_1"/>
            <Button
                android:id="@+id/chose_player_button6"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="2"
                android:layout_column="1"
                android:text="@string/player3"
                android:background="@drawable/round_button_2"/>
            <Button
                android:id="@+id/chose_player_button7"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="3"
                android:layout_column="0"
                android:text="@string/player4"
                android:background="@drawable/round_button_1"/>
            <Button
                android:id="@+id/chose_player_button8"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="3"
                android:layout_column="1"
                android:text="@string/player4"
                android:background="@drawable/round_button_2"/>
            <Button
                android:id="@+id/chose_player_button9"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="4"
                android:layout_column="0"
                android:text="@string/player5"
                android:background="@drawable/round_button_1"/>
            <Button
                android:id="@+id/chose_player_button10"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_row="4"
                android:layout_column="1"
                android:text="@string/player5"
                android:background="@drawable/round_button_2"/>
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>