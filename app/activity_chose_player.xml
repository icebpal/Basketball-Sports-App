<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChosePlayerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/team1"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_toStartOf="@+id/vs"/>

        <TextView
            android:id="@+id/vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/vs"
            android:textSize="48sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/team2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="@string/team2"
            android:textSize="48sp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/vs"
            />

        <TextView
            android:id="@+id/score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="12"
            android:textSize="48sp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/team1"
            />

        <TextView
            android:id="@+id/timeout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="2"
            android:textSize="48sp"
            android:layout_toEndOf="@id/score1"
            android:layout_below="@id/team1"
            />

        <TextView
            android:id="@+id/foul1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="1"
            android:textSize="48sp"
            android:layout_toEndOf="@id/timeout1"
            android:layout_below="@id/team1"
            />

        <TextView
            android:id="@+id/score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="8"
            android:textSize="48sp"
            android:layout_toStartOf="@id/team2"
            android:layout_below="@id/team1"
            />

        <TextView
            android:id="@+id/timeout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:text="3"
            android:textSize="48sp"
            android:layout_toEndOf="@id/score2"
            android:layout_below="@id/team1"
            />

        <TextView
            android:id="@+id/foul2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="2"
            android:textSize="48sp"
            android:layout_toEndOf="@id/timeout2"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/team1"
            />

        <TextView
            android:id="@+id/quarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="@string/quarter2"
            android:textSize="48sp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/score1"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="@string/timeExample"
            android:textSize="48sp"
            android:layout_toEndOf="@id/quarter"
            android:layout_below="@id/timeout1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

        <TextView
            android:id="@+id/live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/live"
            android:layout_below="@+id/score2"
            android:layout_toEndOf="@id/time"
            android:textSize="48sp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stats"
            android:textSize="48sp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/live"
            android:layout_below="@+id/foul2"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />

        <Button
            android:id="@+id/viewAction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actions"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quarter"
            android:columnCount="2"
            android:rowCount="5">

            <Button
                android:id="@+id/chose_player_button1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="75dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/round_button_1"
                android:text="@string/player1" />

            <Button
                android:id="@+id/chose_player_button2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/round_button_2"
                android:text="@string/player1" />

            <Button
                android:id="@+id/chose_player_button3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="75dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/round_button_1"
                android:text="@string/player2" />

            <Button
                android:id="@+id/chose_player_button4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/round_button_2"
                android:text="@string/player2" />

            <Button
                android:id="@+id/chose_player_button5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="75dp"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/round_button_1"
                android:text="@string/player3" />

            <Button
                android:id="@+id/chose_player_button6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/round_button_2"
                android:text="@string/player3" />

            <Button
                android:id="@+id/chose_player_button7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="75dp"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@drawable/round_button_1"
                android:text="@string/player4" />

            <Button
                android:id="@+id/chose_player_button8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/round_button_2"
                android:text="@string/player4" />

            <Button
                android:id="@+id/chose_player_button9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="75dp"
                android:layout_row="4"
                android:layout_column="0"
                android:background="@drawable/round_button_1"
                android:text="@string/player5" />

            <Button
                android:id="@+id/chose_player_button10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="4"
                android:layout_column="1"
                android:background="@drawable/round_button_2"
                android:text="@string/player5" />
        </GridLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>